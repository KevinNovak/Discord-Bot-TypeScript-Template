{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "register",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "preLaunchTask": "build",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "node",
            "args": ["--enable-source-maps", "${workspaceFolder}/dist/start.js", "--register"],
            "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
            "outputCapture": "std",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": ["<node_internals>/**"],
            "restart": false
        },
        {
            "name": "start",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "preLaunchTask": "build",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "node",
            "args": ["--enable-source-maps", "${workspaceFolder}/dist/start.js"],
            "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
            "outputCapture": "std",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": ["<node_internals>/**"],
            "restart": false
        },
        {
            "name": "start:shard",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "preLaunchTask": "build",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "node",
            "args": ["--enable-source-maps", "${workspaceFolder}/dist/app.js"],
            "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
            "outputCapture": "std",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": ["<node_internals>/**"],
            "restart": false
        }
    ]
}
