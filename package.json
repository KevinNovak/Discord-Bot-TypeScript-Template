{
    "name": "my-bot",
    "version": "1.0.0",
    "author": "Kevin Novak",
    "description": "A discord.js bot template written with TypeScript",
    "license": "MIT",
    "private": true,
    "engines": {
        "node": ">=16.6.0"
    },
    "type": "module",
    "exports": [
        "./dist/start-bot.js",
        "./dist/start-manager.js"
    ],
    "scripts": {
        "lint": "eslint . --cache --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "eslint . --fix --cache --ext .js,.jsx,.ts,.tsx",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "clean": "git clean -xdf --exclude=\"/config/**/*\"",
        "clean:dry": "git clean -xdf --exclude=\"/config/**/*\" --dry-run",
        "build": "tsc --project tsconfig.json",
        "register": "npm run build && node --enable-source-maps dist/start-bot.js --register",
        "register:clear": "npm run build && node --enable-source-maps dist/start-bot.js --register:clear",
        "start": "npm run start:bot",
        "start:bot": "npm run build && node --enable-source-maps dist/start-bot.js",
        "start:manager": "npm run build && node --enable-source-maps dist/start-manager.js",
        "start:pm2": "npm run build && npm run pm2:start",
        "pm2:start": "pm2 start process.json",
        "pm2:stop": "pm2 stop process.json",
        "pm2:delete": "pm2 delete process.json"
    },
    "dependencies": {
        "@discordjs/rest": "0.3.0",
        "class-transformer": "0.5.1",
        "class-validator": "0.13.2",
        "discord-api-types": "0.27.2",
        "discord.js": "13.6.0",
        "discord.js-rate-limiter": "1.3.2",
        "express": "4.17.3",
        "express-promise-router": "4.1.1",
        "filesize": "8.0.7",
        "linguini": "1.3.1",
        "luxon": "2.3.0",
        "node-fetch": "3.2.0",
        "node-schedule": "2.1.0",
        "pino": "7.8.0",
        "pino-pretty": "7.5.1",
        "pm2": "^5.2.0",
        "reflect-metadata": "^0.1.13",
        "remove-markdown": "0.3.0"
    },
    "devDependencies": {
        "@types/express": "4.17.13",
        "@types/luxon": "2.0.9",
        "@types/node": "^17.0.19",
        "@types/node-fetch": "3.0.2",
        "@types/node-schedule": "1.3.2",
        "@types/remove-markdown": "0.3.1",
        "@typescript-eslint/eslint-plugin": "^5.12.1",
        "@typescript-eslint/parser": "^5.12.1",
        "eslint": "^8.9.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-unicorn": "^41.0.0",
        "prettier": "^2.5.1",
        "typescript": "^4.5.5"
    }
}
